@model IEnumerable<ReciboGG.Models.DB.Grado>

@{
    ViewBag.Title = "Grados";
}

<h2>Grados</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alumno.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Maestra.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alumno.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Maestra.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id_Grado }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id_Grado })

        </td>
    </tr>
}

</table>
