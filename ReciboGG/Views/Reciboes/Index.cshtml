@model IEnumerable<ReciboGG.Models.DB.Recibo>

@{
    ViewBag.Title = "Recibos Pagina Principal";
}

<h2>Recibos</h2>
<p>

    @Html.ActionLink("Nuevo Recibo", "Create") |
    @Html.ActionLink("Pago Detalle", "Index", "Pago_Detalle")

</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lugar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alumno.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pago_Detalle.Detalle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tutor.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lugar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pago_Detalle.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tutor.Nombre)
            </td>
            <td>


                @Html.ActionLink("Impresion", "Impresion", new { id = item.Id_Recibo })

            </td>
        </tr>
    }


</table>
