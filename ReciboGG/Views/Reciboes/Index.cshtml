            @Html.DisplayNameFor(model => model.Tutor.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lugar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alumno.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pago_Detalle.Detalle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tutor.Nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id_Recibo }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id_Recibo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id_Recibo })
        </td>
    </tr>
}

</table>
