@model IEnumerable<ReciboGG.Models.DB.Recibo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <ul>
        <li>@Html.ActionLink("Create New", "Create")</li>
        <li> @Html.ActionLink("Pago Detalle", "Nuevo Detalle de pago", "Pago_Detalle")</li>
    </ul>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lugar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alumno.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pago_Detalle.Detalle)
        </th>
